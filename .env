# Simple Local Setup - WORKING CONFIGURATION
NODE_ENV=development
PORT=5000
HOST=0.0.0.0

# Database - MATCHES DOCKER EXACTLY
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/findawise_empire
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=postgres
PGDATABASE=findawise_empire

# Security Keys (Required)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-session-secret-change-this-in-production

# Local AI (for your RTX 3060)
LOCAL_AI_ENABLED=true
LOCAL_AI_URL=http://localhost:11434
LOCAL_AI_CHAT_MODEL=llama2
LOCAL_AI_EMBEDDINGS_MODEL=nomic-embed-text

# Optional Services (set to false for now)
VECTOR_DB_ENABLED=false
SCRAPING_ENABLED=false
REDIS_URL=redis://localhost:6379

# Frontend
FRONTEND_URL=http://localhost:5000

# Performance
GPU_ENABLED=true
EMPIRE_MODE=true